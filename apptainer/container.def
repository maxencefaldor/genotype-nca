Bootstrap: docker
From: nvidia/cuda:11.4.2-cudnn8-devel-ubuntu20.04

%labels
    Author m.faldor22@imperial.ac.uk
    Author g.bena21@imperial.ac.uk

%help
    Neural Cellular Automata

%files
    requirements.txt

%post
    # Update
    apt-get update && apt-get upgrade -y

    # Install
    apt-get install -y git python3 pip
    pip3 install --upgrade pip
    pip3 install "jax[cuda]" -f https://storage.googleapis.com/jax-releases/jax_cuda_releases.html
    pip3 install -r requirements.txt

    # Create working directory
    mkdir /project/
    cd /project/

    git clone https://github.com/maxencefaldor/neural-cellular-automata .
    git checkout $COMMIT

%apprun main
    # Enter project
    cd /project/

    # Run main
    python3 main.py "$@"
